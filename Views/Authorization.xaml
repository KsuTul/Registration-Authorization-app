<Window x:Class="App.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800" Background="Black">
    <Grid Margin="0,0,-0.4,-1">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="Login"  Content="Email/PhoneNumber" Foreground="Aquamarine" FontSize="20" Margin="20" VerticalContentAlignment="Center" ></Label>
            <TextBox x:Name="LoginBox" Width="300" FontSize="20" ></TextBox>
            <Label x:Name="Password"  Content="Password" Foreground="Aquamarine" FontSize="20" Margin="20" VerticalContentAlignment="Center" ></Label>
            <PasswordBox x:Name="PasswordBox" Width="300" FontSize="20" ></PasswordBox>
        </StackPanel>
    </Grid>
</Window>
